<Window x:Class="ElecStore.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElecStore"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Profile" Height="450" Width="800">
    <materialDesign:Card>
        <StackPanel>
            <!-- Hình đại diện -->
            <Ellipse Width="100" Height="100" Fill="Gray" Margin="0 20 0 10"/>

            <!-- Tên người dùng -->
            <TextBlock x:Name="txtUser"  FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" Margin="0 0 0 10"/>

            <!-- Thông tin chi tiết -->
            <TextBlock x:Name="txtEmal"  HorizontalAlignment="Center" Margin="0 0 0 5"/>
            <TextBlock x:Name="txtStore" HorizontalAlignment="Center" Margin="0 0 0 5"/>
            <TextBlock  x:Name="txtPhone"  HorizontalAlignment="Center" Margin="0 0 0 5"/>

            <!-- Nút chỉnh sửa hồ sơ -->
            <Button Content="Chỉnh Sửa Hồ Sơ" HorizontalAlignment="Center" Background="{DynamicResource PrimaryHueDarkBrush}" Foreground="White" Margin="0 20 0 0"/>
        </StackPanel>
    </materialDesign:Card>

</Window>
