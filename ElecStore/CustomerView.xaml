<Window x:Class="ElecStore.CustomerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElecStore"
        mc:Ignorable="d"
        Title="CustomerView" Height="450" Width="1000">
    <Grid>        <Grid.ColumnDefinitions>            <ColumnDefinition Width="3*"/>            <ColumnDefinition Width="1*"/>        </Grid.ColumnDefinitions>        <ListView x:Name="listViewProduct" Margin="10" Grid.Column="0" SelectionChanged="ListViewProduct_SelectionChanged"  BorderThickness="1" BorderBrush="LightGray">            <ListView.View>                <GridView>                    <GridViewColumn Header="ID"  Width="10" DisplayMemberBinding="{Binding CustomerId}"/>                    <GridViewColumn Header="Name" Width="75" DisplayMemberBinding="{Binding CustomerName}"/>                    <GridViewColumn Header="Phone" Width="95" DisplayMemberBinding="{Binding CustomerPhone}"/>                    <GridViewColumn Header="Address" Width="120" DisplayMemberBinding="{Binding CustomerAddress}"/>                    <GridViewColumn Header="Type" Width="100" DisplayMemberBinding="{Binding CustomerType}"/>                    <GridViewColumn Header="Discount" Width="100" DisplayMemberBinding="{Binding Discount}"/>                    <GridViewColumn Header="Total Bought" Width="100" DisplayMemberBinding="{Binding TotalBought}"/>                    <GridViewColumn Header="Comment" Width="100">                        <GridViewColumn.CellTemplate>                            <DataTemplate>                                <TextBlock Text="{Binding Comment}" TextWrapping="Wrap"/>                            </DataTemplate>                        </GridViewColumn.CellTemplate>                    </GridViewColumn>                </GridView>            </ListView.View>        </ListView>        <Grid Grid.Column="1" Margin="10"   Background="#E3FF80">            <Label Content="Information Detail" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10"/>            <StackPanel  Margin="10,30,10,0">                <TextBlock Text="ID:" FontWeight="Bold"/>                <TextBlock Text="{Binding ElementName=listViewProduct, Path=SelectedItem.CustomerId}" Margin="0,0,0,5" />                <Border BorderBrush="Black" BorderThickness="0,0,0,1"/>                <TextBlock Text="Name:" FontWeight="Bold" Margin="0,0,0,0"/>                <TextBlock Text="{Binding ElementName=listViewProduct, Path=SelectedItem.CustomerName}" Margin="0,0,0,5"/>                <Border BorderBrush="Black" BorderThickness="0,0,0,1"/>                <TextBlock Text="Phone:" FontWeight="Bold" Margin="0,0,0,0"/>                <TextBlock Text="{Binding ElementName=listViewProduct, Path=SelectedItem.CustomerPhone}" Margin="0,0,0,5"/>                <Border BorderBrush="Black" BorderThickness="0,0,0,1"/>                <TextBlock Text="Address:" FontWeight="Bold" Margin="0,0,0,0"/>                <TextBlock Text="{Binding ElementName=listViewProduct, Path=SelectedItem.CustomerAddress}" Margin="0,0,0,5"/>                <Border BorderBrush="Black" BorderThickness="0,0,0,1"/>                <TextBlock Text="Type:" FontWeight="Bold" Margin="0,0,0,0"/>                <TextBlock Text="{Binding ElementName=listViewProduct, Path=SelectedItem.CustomerType}" Margin="0,0,0,5"/>                <Border BorderBrush="Black" BorderThickness="0,0,0,1"/>                <TextBlock Text="Discount:" FontWeight="Bold" Margin="0,0,0,0"/>                <TextBlock Text="{Binding ElementName=listViewProduct, Path=SelectedItem.Discount}" Margin="0,0,0,5"/>                <Border BorderBrush="Black" BorderThickness="0,0,0,1"/>                <TextBlock Text="Total Bought:" FontWeight="Bold" Margin="0,0,0,0"/>                <TextBlock Text="{Binding ElementName=listViewProduct, Path=SelectedItem.TotalBought}" Margin="0,0,0,5"/>                <Border BorderBrush="Black" BorderThickness="0,0,0,1"/>                <TextBlock Text="Comment:" FontWeight="Bold" Margin="0,0,0,0"/>                <TextBlock Text="{Binding ElementName=listViewProduct, Path=SelectedItem.Comment}" TextWrapping="Wrap" Margin="0,0,0,5"/>            </StackPanel>        </Grid>    </Grid>
</Window>
